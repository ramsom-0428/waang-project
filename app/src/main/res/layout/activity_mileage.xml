<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:orientation="vertical"
    tools:context=".Mileage">

    <TextView
        android:id="@+id/notice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="15dp"
        android:fontFamily="@font/jua"
        android:text="장학금 / 마일리지 떠먹여줄게"
        android:textColor="#B58DFA"
        android:textSize="30sp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="10dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:src="@drawable/moneys" />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_weight="1"
            android:fontFamily="@font/jua"
            android:text="장학금 및 S+마일리지 정보를 한눈에!" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginLeft="10dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/jua"
                android:text="장학제도"
                android:textColor="#673AB7"
                android:textSize="18sp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_margin="10dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/mm"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="장학금 지급규정 안내" />

                <TextView
                    android:id="@+id/mm2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="장학금 시행세칙 안내" />

                <TextView
                    android:id="@+id/mm3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="신입생 장학" />

                <TextView
                    android:id="@+id/mm4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="재학생 장학" />

                <TextView
                    android:id="@+id/mm5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="학자금 대출 안내 - 한국장학재단 페이지로 이동" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/jua"
                android:text="S+마일리지 및 장학금"
                android:textColor="#673AB7"
                android:textSize="18sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="10dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/ss"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="S+마일리지" />

                <TextView
                    android:id="@+id/ss2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="S+마일리지 장학금" />

                <TextView
                    android:id="@+id/ss3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Sunshine (학생진로종합시스템)" />

                <TextView
                    android:id="@+id/ss4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="FAQ" />
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

    <TextView
        android:id="@+id/textView14"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="15dp"
        android:fontFamily="@font/jua"
        android:text="장학금 / S+마일리지 공지"
        android:textColor="#B58DFA"
        android:textSize="24sp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/btn1"
            android:layout_marginRight="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginTop="5dp"
            android:layout_weight="1"
            android:background="@drawable/edge"
            android:fontFamily="@font/jua"
            android:padding="5dp"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:text="장학금"
            android:textColor="@color/click"
            android:textSize="10sp" />

        <TextView
            android:id="@+id/btn2"
            android:layout_marginLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginTop="5dp"
            android:layout_weight="1"
            android:background="@drawable/edge"
            android:fontFamily="@font/jua"
            android:padding="5dp"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:text="S+마일리지"
            android:textColor="@color/click"
            android:textSize="10sp" />

    </LinearLayout>

    <TextView
        android:id="@+id/test"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="test"
        android:textSize="0sp" />

    <ListView
        android:id="@+id/listview"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</LinearLayout>
